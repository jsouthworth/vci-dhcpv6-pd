	revision 2020-01-29 {
		description "Initial revision.";
	}

	notification prefix-assigned {
		leaf interface {
			type string;
		}
		leaf prefix {
			type inet-types:ipv6-prefix;
		}
	}

	notification prefix-removed {
		leaf interface {
			type string;
		}
		leaf prefix {
			type inet-types:ipv6-prefix;
		}
	}

	grouping dhcpv6pd-address {
		container dhcpv6pd {
			presence "Enables dhcpv6pd address autoconfiguration";
			configd:help "Enables dhcpv6pd address autoconfiguration";
			leaf dhcpv6-client-interface {
				description "Interface facing the dhcpv6 server";
				configd:help "Interface facing the dhcpv6 server";
				type string;
				mandatory true;
			}
			leaf address-type {
				description "Address derivation type";
				configd:help "Address derivation type";
				type enumeration {
					enum eui64 {
						description "Derive the address as a eui64 address";
						configd:help "Derive the address as a eui64 address";
					}
					enum template {
						description "Derive the address from the provided template";
						configd:help "Derive the address from the provided template";
					}
				}
				default eui64;
			}
			leaf template {
				description "Derive address based on the provided template";
				configd:help "Derive address based on the provided template";
				must "address-type = template";
				type string; //TODO: make pattern for a v6 template
			}
		}
	}

	augment /if:interfaces/dp:dataplane/dp:ipv6/rtadv:address {
		uses dhcpv6pd-address;
	}
}
